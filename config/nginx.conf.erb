daemon off;
worker_processes auto;

events { worker_connections 1024; }

http {
  types {
    text/html html;
    text/css css;
    application/javascript js;
    text/javascript js;
    image/svg+xml svg;
    image/png png;
    image/jpeg jpg jpeg;
    image/x-icon ico;
  }
  default_type application/octet-stream;

  server {
    listen <%= ENV["PORT"] %>;
    server_name _;

    root /app/public;
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;
    }
  }
}